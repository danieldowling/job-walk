<h1>Edit this Job!</h1>

<%= form_for @job do |f| %>

	
	<div>
		<%= f.label :company_name %>
		<%= f.text_field :company_name %>
	</div>

	<div>
		<%= f.label :job_title %>
		<%= f.text_field :job_title %>
	</div>

	<div>
		<%= f.label :address_number %>
		<%= f.text_field :address_number %>
	</div>

	<div>
		<%= f.label :street_name %>
		<%= f.text_field :street_name %>
	</div>

	<div>
		<%= f.label :city %>
		<%= f.text_field :city %>
	</div>

	<div>
		<%= f.label :zip_code %>
		<%= f.text_field :zip_code %>
	</div>

	<div>
		<%= f.label :job_description %>
		<%= f.text_field :job_description %>
	</div>

	<%= f.submit "Submit these changes" %>

<% end %>

<%= link_to "Back to the list!", jobs_path %>